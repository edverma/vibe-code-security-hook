{
  "name": "vibe-code-security-hook",
  "version": "1.0.3",
  "description": "A Git pre-commit hook to prevent accidentally committing sensitive data using Ollama LLM",
  "main": "index.js",
  "type": "module",
  "bin": {
    "vibe-security-hook": "index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "postinstall": "node -e \"import('./index.js').then(module => module.installHook())\""
  },
  "keywords": [
    "git",
    "hook",
    "pre-commit",
    "security",
    "credentials",
    "api-keys",
    "secrets",
    "ollama",
    "llm"
  ],
  "author": "edverma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edverma/vibe-code-security-hook.git"
  },
  "bugs": {
    "url": "https://github.com/edverma/vibe-code-security-hook/issues"
  },
  "homepage": "https://github.com/edverma/vibe-code-security-hook#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "node-fetch": "^3.3.2"
  }
}
